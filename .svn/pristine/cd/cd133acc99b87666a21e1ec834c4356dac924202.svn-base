        /*
         * 获取首页职位列表
         * 
         * 参数   post
         *           page
         *           number
         * 返回值  json
         *           count
         *           result
         * 
         */

        public function get_job_list() {

                $page = $_POST['page'];
                $size = $_POST['number'];
                $start = ($page - 1) * $size;


                $mOb = new JobModel;
                $num = $mOb->new_job_count(); //得到列表总条数

                $limit = "$start,$size";
                $result = $mOb->new_job_list($limit); //得到职位列表


                if (empty($result)) {

                        $result = array();
                }
                foreach ($result as &$v) {
                        unset($v['content']);
                        unset($v['workdesc']);
                        unset($v['softlytip']);
                        unset($v['jobbright']);
                        unset($v['email']);
                        unset($v['match_company']);
                        unset($v['match_title']);
                        unset($v['match_skill']);
                        unset($v['match_industry']);
                        unset($v['is_match']);
                        unset($v['orderid']);
                        unset($v['joblang']);
                        unset($v['checkinfo']);
                        unset($v['is_deleted']);
                        unset($v['newstatus']);
                        unset($v['is_view']);
                        unset($v['meth']);
                        unset($v['expertid']);
                        unset($v['report']);
                }
                $data = array(
                    'count' => $num,
                    'result' => $result,
                );

                echo json_encode($data);
        }

